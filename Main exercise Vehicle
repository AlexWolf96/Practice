MAIN

//en esta clase emplearemos la clase creando 3 objetos, definiendo por entrada de datos
//marca, color, precio

package package3;
import javax.swing.JOptionPane;

public class Main{
	
	public static void main(String args[]){

		//atributos
		String marca, color;
		float precio=0;

		//creacion de objetos
		Vehiculo Megane = new Vehiculo(marca, color, precio);
		Vehiculo Corolla = new Vehiculo(marca, color, precio);
		Vehiculo ChevyS2 = new Vehiculo(marca, color, precio);

		//bienvenida y peticion de datos al usuario
		//MEGANE
		JOptionPane.showMessageDialog(null,"Welcome user, you have 3 models!\nPlease insert the data of that vehicles in the next window");
		Megane.marca=String.format(JOptionPane.showInputDialog(null,"Insert the Sign of the model \"Megane\":"));
		Megane.color=String.format(JOptionPane.showInputDialog(null,"Insert the colour of the model \"Megane\":"));
		Megane.precio=Float.parseFloat(JOptionPane.showInputDialog(null,"Insert the price of the model \"Megane\":"));
		//COROLLA
		JOptionPane.showMessageDialog(null,"Welcome user, you have 3 models!\nPlease insert the data of that vehicles in the next window");
		Corolla.marca=String.format(JOptionPane.showInputDialog(null,"Insert the Sign of the model \"Corolla\":"));
		Corolla.color=String.format(JOptionPane.showInputDialog(null,"Insert the colour of the model \"Corolla\":"));
		Corolla.precio=Float.parseFloat(JOptionPane.showInputDialog(null,"Insert the price of the model \"Corolla\":"));
		//ChevyS2
		JOptionPane.showMessageDialog(null,"Welcome user, you have 3 models!\nPlease insert the data of that vehicles in the next window");
		ChevyS2.marca=String.format(JOptionPane.showInputDialog(null,"Insert the Sign of the model \"ChevyS2\":"));
		ChevyS2.color=String.format(JOptionPane.showInputDialog(null,"Insert the colour of the model \"ChevyS2\":"));
		ChevyS2.precio=Float.parseFloat(JOptionPane.showInputDialog(null,"Insert the price of the model \"ChevyS2\":"));
	
		//carga de datos finalizada
		JOptionPane.showMessageDialog(null,"charge acomplished!");

		if(Megane.precio<Corolla.precio && Megane.precio<ChevyS2.precio){
		JOptionPane.showMessageDialog(null,"the most cheapest car actually is the model Megane");
		}
		if(Corolla.precio<Megane.precio && Corolla.precio<ChevyS2.precio){
		JOptionPane.showMessageDialog(null,"the most cheapest car actually is the model Corolla");
		}
		if(ChevyS2.precio<Megane.precio && ChevyS2.precio<Corolla.precio){
		JOptionPane.showMessageDialog(null,"the most cheapest car actually is the model ChevyS2");
		}
	}
}
